@page "/peliculas/crear"
@inject NavigationManager navegationManager
<h3>Crear Pelicula</h3>

<FormularioPelicula Pelicula="Pelicula" OnValidSubmit="Crear" GenerosNoSeleccionados="GenerosNoSeleccionados"></FormularioPelicula>

@code {
    private Pelicula Pelicula;
    private List<Genero> GenerosNoSeleccionados;

    protected override void OnInitialized()
    {
        Pelicula = new Pelicula();
        GenerosNoSeleccionados = new List<Genero>() {
        new Genero(){ Id=1,Nombre="Comedia"},
        new Genero(){ Id=2,Nombre="Drama"},
        new Genero(){ Id=3,Nombre="Accion"},
        new Genero(){ Id=4,Nombre="Sci-fi"}
        };
    }

    void Crear()
    {
        Console.WriteLine(navegationManager.Uri);
        navegationManager.NavigateTo("pelicula");
    }


}
